pipeline {
  agent {
    docker {
      image 'node:18'
      args  '--user root:root'
    }
  }

  environment {
    CI = 'true'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install') {
      steps {
        sh 'npm ci'
      }
    }

    stage('Lint') {
      steps {
        sh 'npm run lint'
      }
    }

    stage('Test') {
      steps {
        // Run tests and produce JUnit-style output for Jenkins
        sh 'npm test -- --reporter junit > test-results.xml'
      }
      post {
        always {
          junit allowEmptyResults: true, testResults: 'test-results.xml'
        }
      }
    }

    stage('Build') {
      steps {
        sh 'npm run build'
      }
    }

    stage('Deploy') {
      when {
        expression { return env.DEPLOY_HOST != null && env.DEPLOY_HOST != '' }
      }
      steps {
        // ensure ssh client and rsync exist
        sh 'apt-get update && apt-get install -y rsync openssh-client'
        withCredentials([sshUserPrivateKey(credentialsId: 'ssh-deploy-key', keyFileVariable: 'DEPLOY_KEY')]) {
          sh 'chmod 600 "$DEPLOY_KEY"'
          sh "./deploy.sh -h ${env.DEPLOY_HOST} -u ${env.DEPLOY_USER ?: 'aymen'} -p ${env.DEPLOY_PATH ?: '/var/www/mycontacts'} -i $DEPLOY_KEY -a ${env.API_URL ?: ''}"
        }
      }
    }

    stage('Archive') {
      steps {
        archiveArtifacts artifacts: 'dist/**', fingerprint: true
      }
    }
  }

  post {
    success {
      echo 'Frontend pipeline succeeded.'
    }
    failure {
      echo 'Frontend pipeline failed.'
    }
    always {
      echo "Listing workspace contents for debugging:"
      sh 'ls -la'
    }
  }
}
